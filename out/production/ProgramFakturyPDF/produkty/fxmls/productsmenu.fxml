<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="produkty.controllers.Productsmenu" fx:id="productsMenu">
    <top>
        <Label text="Produkty firmy" BorderPane.alignment="center"/>
    </top>
    <center>
        <VBox alignment="center" spacing="10">
            <children>
                <Button text="Wyświetl produkty firmy" prefWidth="200" onAction="#listProductsMenu" style="-fx-background-radius: 30; -fx-background-insets: 0,1,1; -fx-text-fill: black; -fx-effect: dropshadow( three-pass-box , rgba(0,0,0,0.6) , 3, 0.0 , 0 , 1 );">
                    <graphic>
                        <ImageView>
                            <Image url="@Icons/listProducts.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                <Button text="Dodaj produkt" prefWidth="200" onAction="#addProductMenu" style="-fx-background-radius: 30; -fx-background-insets: 0,1,1; -fx-text-fill: black; -fx-effect: dropshadow( three-pass-box , rgba(0,0,0,0.6) , 3, 0.0 , 0 , 1 );">
                    <graphic>
                        <ImageView>
                            <Image url="@Icons/addProductt.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                <Button text="Wstecz" prefWidth="200" onAction="#returnToMainMenu" style="-fx-background-radius: 30; -fx-background-insets: 0,1,1; -fx-text-fill: black; -fx-effect: dropshadow( three-pass-box , rgba(0,0,0,0.6) , 3, 0.0 , 0 , 1 );">
                    <graphic>
                        <ImageView>
                            <Image url="@Icons/returnProduct.png"/>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </VBox>
    </center>
    <bottom>
        <Label text="Copyright by Mateusz Mikuła 2020" BorderPane.alignment="center"/>
    </bottom>
</BorderPane>
